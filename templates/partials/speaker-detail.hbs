<div class="rw g-speaker-detail">
    <div class="cl speaker-info">
        <div class="speaker-info__image image--has-border">
            <img srcset="/assets/{{ version '_' }}/{{ imageLarge }} 320w,
                       /assets/{{ version '_' }}/{{ imageMedium }} 256w,
                       /assets/{{ version '_' }}/{{ imageSmall }} 200w"
                 src="/assets/{{ version '_' }}/{{ imageSmall }}" alt="{{ altText }}">
            <!--<div class="speaker__image-overlay"></div>-->
        </div>

        <h2 class="speaker__name">{{ name }}</h2>
        <p class="speaker__bio">{{ bio }}</p>
    </div>

    <div class="cl talk">
        <h2 class="talk__title">{{ talkTitle }}</h2>
        <p class="talk__abstract">{{ talkAbstract }}</p>
    </div>
</div>
